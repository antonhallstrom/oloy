{
  "name": "oloy",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-server-express": "^2.9.7",
    "eslint-plugin-graphql": "^3.1.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-hooks": "^4.0.2",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.10.1",
    "ramda": "^0.26.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "save-graphql-schema": "^1.0.6",
    "urql": "^1.6.2"
  },
  "scripts": {
    "get-schema": "save-graphql-schema http://localhost:4000/graphql --json",
    "start": "npm run get-schema && react-scripts start",
    "start-server": "nodemon src/server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "prettier",
      "graphql"
    ],
    "parser": "babel-eslint",
    "rules": {
      "graphql/template-strings": [
        "error",
        {
          "env": "apollo",
          "tagName": "gql",
          "schemaJson": "./schema.json"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  }
}
